# PlatformIO Project Configuration File for FastLED
# Generated by FastLED pio run system

[env:{board_name}]
platform = {platform}
board = {board_name}
framework = {framework}

# FastLED library dependency (symlinked for efficiency)
lib_deps = symlink://{fastled_src_path}

# LDF Configuration (dynamic based on phase)
lib_ldf_mode = {ldf_mode}
lib_compat_mode = soft

# Build optimization
build_cache_dir = {cache_dir}

# Board-specific build flags and options
{build_flags}
{custom_options}