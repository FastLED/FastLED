// FastLED Project Debug Configurations (Manually Maintained)
//
// PlatformIO Debugging Solution
//
// Documentation: https://docs.platformio.org/en/latest/plus/debugging.html
// Configuration: https://docs.platformio.org/en/latest/projectconf/sections/env/options/debug/index.html
//
// NOTE: Arduino debugging requires fastled package to have __main__.py
// See task.md for implementation details

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ðŸŽ¯ Auto Debug (Smart File Detection)",
            "type": "auto-debug",
            "request": "launch",
            "map": {
                "tests/*.cpp": "C++: Debug Test (Tests Directory)",
                "tests/**/*.cpp": "C++: Debug Test (Tests Directory)",
                "**/tests/*.cpp": "C++: Debug Test (Tests Directory)",
                "**/tests/**/*.cpp": "C++: Debug Test (Tests Directory)",
                "tests\\*.cpp": "C++: Debug Test (Tests Directory)",
                "tests\\**\\*.cpp": "C++: Debug Test (Tests Directory)",
                "tests/*.h": "C++: Debug Test (Tests Directory)",
                "tests/**/*.h": "C++: Debug Test (Tests Directory)",
                "*.py": "Python: Current File (UV Debug)",
                "test.py": "Python: Current File (UV Debug)",
                "ci/ci-compile.py": "Python: Current File (UV Debug)",
                "mcp_server.py": "Python: Current File (UV Debug)",
                "*.ino": "Arduino: Run .ino with FastLED (Examples)",
                "examples/**/*.ino": "Arduino: Run .ino with FastLED (Examples)"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Python: Current File (UV)",
            "type": "node-terminal",
            "request": "launch",
            "command": "uv run python \"${file}\"",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Python: Current File (UV Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "python": "${workspaceFolder}/.venv/bin/python",
            "args": [],
            "windows": {
                "python": "${workspaceFolder}/.venv/Scripts/python.exe"
            }
        },
        {
            "name": "Arduino: Run .ino with FastLED (Examples)",
            "type": "debugpy",
            "request": "launch",
            "module": "fastled",
            "args": ["${file}", "--background-update", "--app", "--debug"],
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "C++: Debug Test (Tests Directory)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/.build/bin/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compile Current Test File (Debug Only)",
            "logging": {
                "moduleLoad": false,
                "programOutput": true,
                "trace": false
            }
        },
        {
            "name": "Python: FastLED Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "cwd": "${workspaceFolder}",
            "args": ["--cpp"],
            "justMyCode": true
        },
        {
            "name": "Python: FastLED Tests (UV)",
            "type": "node-terminal",
            "request": "launch",
            "command": "uv run python test.py --cpp",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },

        {
            "name": "Python: CI Compile",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ci/ci-compile.py",
            "cwd": "${workspaceFolder}",
            "args": ["uno", "--examples", "Blink"],
            "justMyCode": true
        },
        {
            "name": "Python: CI Compile (UV)",
            "type": "node-terminal",
            "request": "launch",
            "command": "uv run python ci/ci-compile.py uno --examples Blink",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },

        {
            "name": "Python: MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mcp_server.py",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Python: MCP Server (UV)",
            "type": "node-terminal",
            "request": "launch",
            "command": "uv run python mcp_server.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "platformio-debug",
            "request": "launch",
            "name": "PlatformIO: Debug",
            "executable": "c:/Users/niteris/dev/fastled/.pio/build/dev/firmware.elf",
            "projectEnvName": "dev",
            "toolchainBinDir": "C:/Users/niteris/.platformio/packages/toolchain-xtensa-esp-elf/bin",
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": {
                "type": "PlatformIO",
                "task": "Pre-Debug"
            }
        },
        {
            "type": "platformio-debug",
            "request": "launch",
            "name": "PlatformIO: Debug (skip Pre-Debug)",
            "executable": "c:/Users/niteris/dev/fastled/.pio/build/dev/firmware.elf",
            "projectEnvName": "dev",
            "toolchainBinDir": "C:/Users/niteris/.platformio/packages/toolchain-xtensa-esp-elf/bin",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "platformio-debug",
            "request": "launch",
            "name": "PlatformIO: Debug (without uploading)",
            "executable": "c:/Users/niteris/dev/fastled/.pio/build/dev/firmware.elf",
            "projectEnvName": "dev",
            "toolchainBinDir": "C:/Users/niteris/.platformio/packages/toolchain-xtensa-esp-elf/bin",
            "internalConsoleOptions": "openOnSessionStart",
            "loadMode": "manual"
        }
    ]
}
     